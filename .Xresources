!! fonts
!URxvt.font: xft:MesloLGS NF:size=13,xft:Noto Emoji:minspace=False,xft:PowerlineSymbols
URxvt.font: xft:MesloLGS NF:size=13, xft:PowerlineSymbols
!! colors
! special
URxvt.depth: 32
URxvt.foreground:   #d8dee8
URxvt.background: [90]#2f343f
URxvt.cursorColor:  #b48ead

! black
URxvt.color0  : #4b5262
URxvt.color8  : #434a5a

! red
URxvt.color1  : #bf616a
URxvt.color9  : #b3555e

! green
URxvt.color2  : #a3be8c
URxvt.color10 : #93ae7c

! yellow
URxvt.color3  : #ebcb8b
URxvt.color11 : #dbbb7b

! blue
URxvt.color4  : #81a1c1
URxvt.color12 : #7191b1

! magenta
URxvt.color5  : #b48ead
URxvt.color13 : #a6809f

! cyan
URxvt.color6  : #89d0bA
URxvt.color14 : #7dbba8

! white
URxvt.color7  : #e5e9f0
URxvt.color15 : #d1d5dcâ‡§

!! Fade characters on out of focus
URxvt*fading: 15

!! keysbindings 
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! Disable default keybindings
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

!! Scrollbar
URxvt.scrollstyle: plain
URxvt.scrollBar_right: true
URxvt.scrollColor:[40]#B2B2B2 

!! Scroll behaviour on secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!! Skip scroling when lots of lines are displayed
URxvt*skipScroll:  true

!! Extensions
URxvt.perl-ext: default,url-select,matcher
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.matcher.button: 1

