set number                    " show line numbers
set relativenumber            " show relative line numbers
highlight LineNr ctermfg=LightCyan  " set relative number color to LightCyan

set wildmenu
set wildignorecase
set wildmode=full,longest,list

set hlsearch

let mapleader=" "

" Spell check
set spell spelllang=en_us
set spell!  " turn off spell check by default

" Set statusbar theme
let g:airline_theme='powerlineish'

